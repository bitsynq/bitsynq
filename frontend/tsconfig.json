{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"lib": [
			"ES2022",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.vue"
	],
	"exclude": [
		"node_modules"
	]
}